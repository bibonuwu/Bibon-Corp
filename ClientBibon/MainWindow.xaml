<Window x:Class = "ClientBibon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
        Title = "ClientBibon" Height = "200" Width = "520"
        Closing="Window_Closing"
        Loaded = "Window_Loaded">
    <Grid Margin = "16">
        <StackPanel>
            <TextBlock Text = "ClientBibon – регистрация ПК" FontSize = "18" FontWeight = "Bold"/>
            <TextBlock x:Name = "Status" Margin = "0,8,0,0" TextWrapping = "Wrap"/>
            <Button Content = "Повторить регистрацию" Width = "200" Margin = "0,10,0,0" Click = "Repeat_Click"/>
        </StackPanel>
    </Grid>
</Window>